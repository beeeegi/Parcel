{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Parcel",
  "version": "1.0.0",
  "identifier": "com.parcel.converter",
  "build": {
    "frontendDist": "../ui"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Parcel - Roblox to Rojo Converter",
        "width": 600,
        "height": 500,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 500,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "allowDowngrades": true
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
